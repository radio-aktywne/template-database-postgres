plugins:
  # Enable SQL formatting plugin
  - prettier-plugin-sql
  # Enable JSON sorting plugin
  - prettier-plugin-sort-json
  {%- if docs %}
  # Enable package.json sorting plugin
  - prettier-plugin-packagejson
  {%- endif %}

# Use PostgreSQL dialect
language: postgresql
database: postgresql

# Enforce uppercase keywords
keywordCase: upper

# Sort JSON recursively
jsonRecursiveSort: true
